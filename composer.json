{
    "name": "sourceboat/laravel-clockify-api",
    "description": "Laravel repository to fetch reports from the Clockify.me reports API",
    "keywords": ["laravel", "clockify", "api"],
    "license": "MIT",
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "laravel/framework": "^8.0|^9.0|^10.0|^11.0|^12.0",
        "guzzlehttp/guzzle": "^7.2"
      },
      "require-dev": {
        "phpunit/phpunit": "^9.3|^10.0|^11.0",
        "phpmd/phpmd": "^2.6",
        "slevomat/coding-standard": "^8.0",
        "squizlabs/php_codesniffer": "^3.7",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Sourceboat\\LaravelClockifyApi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sourceboat\\LaravelClockifyApi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint:phpcs": "vendor/bin/phpcs -s",
        "lint:phpmd": "vendor/bin/phpmd config,src,tests text phpmd.xml",
        "fix": "vendor/bin/phpcbf"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sourceboat\\LaravelClockifyApi\\LaravelClockifyApiServiceProvider"
            ]
        }
    }
}
